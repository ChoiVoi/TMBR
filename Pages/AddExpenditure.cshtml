@page
@model RazorLoginRegister.Pages.AddExpenditureModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Expenditure";
}

<h2>Add Expenditure</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Amount"></label>
        <input asp-for="Input.Amount" class="form-control" />
        <span asp-validation-for="Input.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <input asp-for="Input.Description" class="form-control" />
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Date"></label>
        <input asp-for="Input.Date" class="form-control" type="date" />
        <span asp-validation-for="Input.Date" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<form method="get" action="/ExpenditureDetails">
    <button type="submit" class="btn btn-secondary">Back to Expenditure Details</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
