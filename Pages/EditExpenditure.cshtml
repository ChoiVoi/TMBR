@page "{id:int}"
@model RazorLoginRegister.Pages.EditExpenditureModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Expenditure";
}

<h2>Edit Expenditure</h2>

<form method="get" action="/ExpenditureDetails">
    <button type="submit" class="btn btn-secondary">Back to Expenditure Details</button>
</form>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Amount"></label>
        <input asp-for="Input.Amount" class="form-control" />
        <span asp-validation-for="Input.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <input asp-for="Input.Description" class="form-control" />
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Date"></label>
        <input asp-for="Input.Date" class="form-control" type="date" />
        <span asp-validation-for="Input.Date" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<form method="post" asp-page-handler="Delete" asp-route-id="@Model.ExpenditureId">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
